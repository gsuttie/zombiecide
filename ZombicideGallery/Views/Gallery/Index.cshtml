@model IEnumerable<ZombicideGallery.Models.Character>
@{
    ViewData["Title"] = "Zombicide Character Gallery";
}
<div class="gallery-container">
    <h1 class="gallery-title">Zombicide Character Gallery</h1>
    <div class="gallery-rows">
        <div class="gallery-row">
            @foreach (var character in Model.Take(5))
            {
                <div class="gallery-item">
                    <div class="image-overlay-container">
                        <img src="@character.ImagePath" class="character-image" alt="@character.Name">
                        <div class="overlay">
                            <h5>@character.Name</h5>
                            <p>@character.Description</p>
                            <div class="character-stats">
                                <p><strong>Type:</strong> @character.Type</p>
                                <p><strong>Health:</strong> @character.Health</p>
                                <p><strong>Skills:</strong> @string.Join(", ", character.Skills)</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="gallery-row">
            @foreach (var character in Model.Skip(5).Take(5))
            {
                <div class="gallery-item">
                    <div class="image-overlay-container">
                        <img src="@character.ImagePath" class="character-image" alt="@character.Name">
                        <div class="overlay">
                            <h5>@character.Name</h5>
                            <p>@character.Description</p>
                            <div class="character-stats">
                                <p><strong>Type:</strong> @character.Type</p>
                                <p><strong>Health:</strong> @character.Health</p>
                                <p><strong>Skills:</strong> @string.Join(", ", character.Skills)</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
.gallery-container {
    text-align: center;
    margin: 0 auto;
}
.gallery-title {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
}
.gallery-rows {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.gallery-row {
    display: flex;
    justify-content: center;
    width: 100%;
    margin-bottom: 2rem;
}
.gallery-item {
    flex: 1 1 calc(20% - 1rem);
    margin: 0.5rem;
    max-width: 220px;
}
.image-overlay-container {
    position: relative;
    width: 100%;
    height: 300px;
    overflow: hidden;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}
.character-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: 10px;
}
.overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(24,24,24,0.92);
    color: #fff;
    opacity: 0;
    transition: opacity 0.3s;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 1rem;
    border-radius: 10px;
}
.image-overlay-container:hover .overlay {
    opacity: 1;
}
.overlay h5 {
    margin: 0 0 0.5rem 0;
    color: #e53935;
    font-size: 1.3rem;
}
.character-stats {
    background-color: rgba(255,255,255,0.08);
    padding: 10px;
    border-radius: 5px;
    margin-top: 10px;
}
.character-stats p {
    margin-bottom: 5px;
}
</style>